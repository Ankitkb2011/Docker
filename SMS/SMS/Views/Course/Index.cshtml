@model IEnumerable<SMS.Course>

@{
    ViewBag.Title = "Index";
}

@Html.Partial("_AlertsMessage")

<a href="@Url.Action("Create")" class="btn btn-primary">
    <span class="glyphicon glyphicon-plus">Add New</span>
</a>

<div class="table-responsive">
    <table class="table table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.School.SchoolName)
            </th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.School.SchoolName)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.CourseID })" class="btn btn-primary">
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>
                </td>
                <td>
                    <a href="@Url.Action("Delete", new { id = item.CourseID })" class="btn btn-danger" onclick="return confirm('Are you sure to delete the record')">
                        <span class="glyphicon glyphicon-trash"></span>
                    </a>


                </td>
            </tr>
        }

    </table>
</div>

